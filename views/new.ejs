<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
		New Room		
	</div>
	<form class="ui form" action="/rooms" method="POST">
		<div class="field">
			<label>Room Number</label>
			<input type="text" name="room[number]" placeholder="number">
		</div>
		<div class="field">
			<label>Room Capacity</label>
			<input type="text" name="room[capacity]" placeholder="capacity">
		</div>
		<div class="field">
			<label>Room Price</label>
			<input type="text" name="room[price]" placeholder="price">
		</div>
		<div class="field">
			<label>Room Image</label>
			<input type="text" name="room[image]" placeholder="image">
		</div>
		<div class="field">
			<label>Room Description</label>
			<textarea name="room[description]"></textarea>
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<%- include("partials/footer") %>
