<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Edit Room:    <%= room.number %>
	</div>
	<form class="ui form" action="/rooms/<%= room._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Room Number</label>
			<input type="text" name="room[number]" value="<%= room.number %>">
		</div>
		<div class="field">
			<label>Room Capacity</label>
			<input type="text" name="room[capacity]" value="<%= room.capacity %>">
		</div>
		<div class="field">
			<label>Room Price</label>
			<input type="text" name="room[price]" value="<%= room.price %>">
		</div>
		<div class="field">
			<label>Room Image</label>
			<input type="text" name="room[image]" value="<%= room.image %>">
		</div>
		<div class="field">
			<label>Room Description</label>
			<textarea name="room[description]"><%- room.description %></textarea>
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<%- include("partials/header") %>
